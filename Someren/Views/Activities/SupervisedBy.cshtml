@model SupervisedByViewModel
<div class="container mt-4">
    <h2 class="text-center">Manage Participants for @Model.Activity.ActivityID</h2>

    <div class="card my-4">
        <div class="card-header">
            <h3>Participating Supervisors</h3>
        </div>
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var lecturer in Model.SupervisingLecturers)
                    {
                        <tr>
                            <td>@lecturer.FirstName @lecturer.LastName</td>
                            <td>
                                <form asp-action="DeleteSupervisor" method="post" style="display:inline;">
                                    <input type="hidden" name="activityId" value="@Model.Activity.ActivityID" />
                                    <input type="hidden" name="employeeId" value="@lecturer.EmployeeN" />
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        <i class="bi bi-x-circle"></i> Remove
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="card my-4">
        <div class="card-header">
            <h3>Non-Participating Supervisors</h3>
        </div>
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var lecturer in Model.NonSupervisingLecturers)
                    {
                        <tr>
                            <td>@lecturer.FirstName @lecturer.LastName</td>
                            <td>
                                <form asp-action="AddSupervisor" method="post" style="display:inline;">
                                    <input type="hidden" name="activityId" value="@Model.Activity.ActivityID" />
                                    <input type="hidden" name="employeeId" value="@lecturer.EmployeeN" />
                                    <button type="submit" class="btn btn-success btn-sm">
                                        <i class="bi bi-plus-circle"></i> Add
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="text-center">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Activities List
        </a>
    </div>
</div>
