@model Someren.Models.Lecturer
@{
    ViewData["Title"] = "Delete Lecturer";
}

<h4>Delete Lecturer</h4>
<form action="/Lecturers/Delete" method="POST">
    <input hidden type="number" name="EmployeeN" value="@Model?.EmployeeN" />

    <div class="form-group py-2">
        <label for="FirstName">First Name:</label>
        <input type="text" id="FirstName" name="First name:" class="form-control" required value="@Model?.FirstName" />
    </div>

    <div class="form-group py-2">
        <label for="LastName">Last name:</label>
        <input type="text" id="LastName" name="LastName" class="form-control" required value="@Model?.LastName" />
    </div>

    <div class="form-group py-2">
        <label for="PhoneN">Phone number:</label>
        <input type="text" id="PhoneN" name="PhoneN" class="form-control" required value="@Model?.PhoneN" />
    </div>

    <div class="mb-3">
        <label for="Age" class="form-label">Age:</label>
        <input type="text" id="Age" name="Age" class="form-control" value="@Model.Age" />
    </div>

    <button type="submit" class="btn delete-btn">Delete</button>

    <button class="btn btn-primary">
        <a href="/Lecturers/Index" style="color: white; text-decoration: none; display: block;">Back</a>
    </button>
</form>
