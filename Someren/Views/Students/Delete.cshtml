@model Someren.Models.Student
@{
    ViewData["Title"] = "Delete Student";
}

<h4>Delete Student</h4>
<form action="/Students/Delete" method="POST">
    <input hidden type="number" name="student_n" value="@Model?.Student_n" />

    <div class="form-group py-2">
        <label for="first_name">First Name:</label>
        <input type="text" id="first_name" name="first_name" class="form-control" required value="@Model?.First_name" />
    </div>

    <div class="form-group py-2">
        <label for="last_name">Last name:</label>
        <input type="text" id="last_name" name="last_name" class="form-control" required value="@Model?.Last_name" />
    </div>

    <div class="form-group py-2">
        <label for="phone_n">Phone number:</label>
        <input type="text" id="phone_n" name="phone_n" class="form-control" required value="@Model?.Phone_n" />
    </div>
    <div class="form-group py-2">
        <label for="ClassN">Class Name:</label>
        <input type="text" id="ClassN" name="ClassN" class="form-control" required value="@Model?.ClassN" />
    </div>

    <button type="submit" class="btn delete-btn">Delete</button>

    <button class="btn btn-primary">
        <a href="/Students/Index" style="color: white; text-decoration: none; display: block;">Back</a>
    </button>

</form>

